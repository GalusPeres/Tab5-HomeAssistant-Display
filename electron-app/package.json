{
  "name": "tab5-game-controls",
  "version": "1.0.0",
  "description": "Tab5 Game Controls - Stream Deck style keyboard controller",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "author": "Tab5 User",
  "license": "MIT",
  "dependencies": {
    "electron": "^28.0.0",
    "electron-store": "^8.1.0",
    "keysender": "2.4.0",
    "sharp": "0.34.5",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.tab5.gamecontrols",
    "productName": "Tab5 Game Controls",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "node_modules/keysender/**/*",
      "node_modules/sharp/**/*",
      "node_modules/ws/**/*",
      "node_modules/electron-store/**/*"
    ],
    "win": {
      "target": ["nsis"],
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true
    },
    "mac": {
      "target": ["dmg"],
      "icon": "icon.png"
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "icon.png"
    }
  }
}
